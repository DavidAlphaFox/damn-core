{:app {:title "Cyber Dungeon Quest"
       :width  1440
       :height 900
       :full-screen? false
       :fps 60}
 :context [[:context/config {:tag :dev
                             :configs {:prod {:map-editor? false
                                              :property-editor? false
                                              :debug-window? false
                                              :debug-options? false}
                                       :dev {:map-editor? true
                                             :property-editor? true
                                             :debug-window? true
                                             :debug-options? true}}}]
           [:context/input]
           [:context/assets {:folder "resources/"
                             :sound-file-extensions #{"wav"}
                             :image-file-extensions #{"png" "bmp"}
                             :log-load-assets? false}]
           [:context/graphics {:world-view {:tile-size 48}
                               :default-font {:file "exocet/films.EXL_____.ttf"
                                              :size 16
                                              :quality-scaling 2}}]
           [:context/cursor] ; -> graphics
           [:context/stage] ; -> graphics?
           [:context/ui] ; -> graphics?
           [:context/tiled]
           [:context/transaction-handler]
           [:tx/all]
           [:context/effect] ; -> :context/transaction-handler
           [:effect/all]
           [:context/ecs] ; -> :context/transaction-handler
           [:entity/all]
           [:context/modifier]
           [:modifier/all]
           [:property/all] ; TODO move together with properties ?!
           [:context/property-types {:properties/audiovisual true ; TODO move together with properties ?!
                                     :properties/creature true
                                     :properties/item true
                                     :properties/skill true
                                     :properties/world true}]
           [:context/properties {:file "resources/properties.edn"}]
           [:context/builder] ; -> tx/entity-types? all entity types together .... for overview...
           [:context/potential-fields] ; -> world ?
           [:context/render-debug] ; -> out of context API
           [:context/game [:context/action-bar
                           :context/inventory
                           :context/uids-entities
                           :context/thrown-error
                           :context/game-paused
                           :context/game-logic-frame
                           :context/elapsed-game-time
                           :context/mouseover-entity
                           :context/player-message]]
           [:context/screens {:first-screen :screens/main-menu
                              :screens {:screens/game           true
                                        :screens/main-menu      true
                                        :screens/map-editor     true
                                        :screens/minimap        true
                                        :screens/options-menu   true
                                        :screens/property-editor true}}]]}
