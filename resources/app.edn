{:app {:title "Cyber Dungeon Quest"
       :width  1440
       :height 900
       :full-screen? false ; TODO fix full-screen bug @ gdx.backends.lwjgl3
       :fps 60}
 :context [[:context/config {:tag :dev ; TODO pass as commandline arg
                             :configs {:prod {:map-editor? false
                                              :property-editor? false
                                              :debug-window? false
                                              :debug-options? false}
                                       :dev {:map-editor? true
                                             :property-editor? true
                                             :debug-window? true
                                             :debug-options? true}}}]
           [:context/assets {:folder "resources/"
                             :sound-file-extensions #{"wav"}
                             :image-file-extensions #{"png" "bmp"}
                             :log-load-assets? false}]
           [:context/graphics {:world-view {:tile-size 48}
                               :default-font {:file "exocet/films.EXL_____.ttf"
                                              :size 16
                                              :quality-scaling 2}
                               :cursors {:cursors/default ["default" [0 0]]
                                         :cursors/black-x ["black_x" [0 0]]
                                         :cursors/denied ["denied" [16 16]]
                                         :cursors/hand-grab ["hand003" [4 16]]
                                         :cursors/hand-before-grab ["hand004" [4 16]]
                                         :cursors/hand-before-grab-gray ["hand004_gray" [4 16]]
                                         :cursors/over-button ["hand002" [0 0]]
                                         :cursors/sandclock ["sandclock" [16 16]]
                                         :cursors/walking ["walking" [16 16]]
                                         :cursors/no-skill-selected ["denied003" [0 0]]
                                         :cursors/use-skill ["pointer004" [0 0]]
                                         :cursors/skill-not-usable ["x007" [0 0]]
                                         :cursors/bag ["bag001" [0 0]]
                                         :cursors/move-window ["move002" [16 16]]
                                         :cursors/princess ["exclamation001" [0 0]]
                                         :cursors/princess-gray ["exclamation001_gray" [0 0]]}}]
           [:context/tiled] ; can move map-renderer into graphics and tiled just api/gdx fns
           [:context/vis-ui] ; TODO dispose stage-screens

           [:entity/body]

           [:entity/image]
           [:entity/animation]
           [:entity/delete-after-animation-stopped]
           [:entity/line-render]

           [:entity/clickable]
           [:entity/delete-after-duration]
           [:entity/mouseover]

           [:entity/player]

           [:entity/plop] ; unclear/but ok for now
           [:entity/projectile-collision]

           [:entity/state]

           [:entity/shout]  ; unclear/but ok for now
           [:entity/faction] ; unclear/but ok for now

           [:entity/stats] ; FIXME TODO #1
           [:entity/string-effect] ; unclear/but ok for now

           [:entity/skills]
           [:entity/inventory]

           [:effect/target-entity]

           [:context/properties {:types [:properties/audiovisual
                                         :properties/creature ; FIXME TODO #2
                                         :properties/item
                                         :properties/projectile ; FIXME TODO #3
                                         :properties/skill
                                         :properties/world]
                                 :file "resources/properties.edn"}]
           [:context/screens [:screens/main-menu
                              :screens/game
                              :screens/map-editor ; TODO tiled-map not disposed anymore at screen dispose
                              :screens/minimap
                              :screens/options-menu
                              :screens/property-editor]]]}
