{:app {:title "Core"
       :width  1440
       :height 900
       :full-screen? false
       :fps 60}
 ; :components is here so we dont't call component/create on those (e.g. entity/body without args)
 ; just the namespaces will be loaded, that's it
 :components [:entity/delete-after-duration

              :entity/movement
              :entity/projectile-collision

              :entity/destroy-audiovisual

              :entity/image

              :entity/animation
              :entity/delete-after-animation-stopped

              :entity/line-render

              :entity/mouseover
              :entity/clickable

              :entity/state

              :entity/player

              :entity/shout

              :entity/faction
              :entity/stats
              :entity/string-effect
              :entity/skills
              :entity/inventory

              :entity-state/load

              :effect/target-entity
              :effect/target-all

              :world/line-of-sight
              :world/mouseover-entity
              :world/potential-fields
              :world/ecs
              :world/time
              :world/widgets
              :world/effect-handler
              :world/grid
              :world/raycaster
              :world/content-grid
              :world/explored-tile-corners

              :operation/numbers
              :data/core]
 :context [[:context/config {:tag :dev
                             :configs {:prod {:map-editor? false
                                              :property-editor? false
                                              :debug-window? false
                                              :debug-options? false}
                                       :dev {:map-editor? true
                                             :property-editor? true
                                             :debug-window? true
                                             :debug-options? true}}}]
           [:context/assets {:folder "resources/"
                             :sound-file-extensions #{"wav"}
                             :image-file-extensions #{"png" "bmp"}
                             :log-load-assets? false}]
           [:context/graphics {:views {:gui-view {:world-width 1440
                                                  :world-height 900}
                                       :world-view {:world-width 1440
                                                    :world-height 900
                                                    :tile-size 48}}
                               :default-font {:file "fonts/exocet/films.EXL_____.ttf"
                                              :size 16
                                              :quality-scaling 2}
                               :cursors {:cursors/default ["default" [0 0]]
                                         :cursors/black-x ["black_x" [0 0]]
                                         :cursors/denied ["denied" [16 16]]
                                         :cursors/hand-grab ["hand003" [4 16]]
                                         :cursors/hand-before-grab ["hand004" [4 16]]
                                         :cursors/hand-before-grab-gray ["hand004_gray" [4 16]]
                                         :cursors/over-button ["hand002" [0 0]]
                                         :cursors/sandclock ["sandclock" [16 16]]
                                         :cursors/walking ["walking" [16 16]]
                                         :cursors/no-skill-selected ["denied003" [0 0]]
                                         :cursors/use-skill ["pointer004" [0 0]]
                                         :cursors/skill-not-usable ["x007" [0 0]]
                                         :cursors/bag ["bag001" [0 0]]
                                         :cursors/move-window ["move002" [16 16]]
                                         :cursors/princess ["exclamation001" [0 0]]
                                         :cursors/princess-gray ["exclamation001_gray" [0 0]]}}]
           [:context/tiled-map-renderer]
           [:context/vis-ui :skin-scale/x1]
           [:context/properties {:types [:properties/audiovisual
                                         :properties/creature
                                         :properties/item
                                         :properties/projectile
                                         :properties/skill
                                         :properties/world]
                                 :file "resources/properties.edn"}]
           [:widgets/background-image "images/moon_background.png"]
           [:context/screens [:screens/main-menu
                              :screens/map-editor
                              ;:screens/minimap
                              :screens/options-menu
                              :screens/property-editor
                              :screens/world]]]}
